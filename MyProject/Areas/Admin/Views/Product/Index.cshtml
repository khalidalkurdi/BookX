
<div class="card  border-0 shadow my-5">
    <div class="card-header bg-warning bg-gradient py-3 ms-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row py-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="UpSert"> <i class="bi bi-plus-circle"></i> Add New Product </a>
            </div>
        </div>
        <table id="tabledata" class=" table table-bordered table-striped">
            <thead>
                <tr>
                    
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>           
        </table>
    </div>
</div>
